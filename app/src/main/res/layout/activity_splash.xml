<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan_splash"
    tools:context=".activity.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/splashActivity_imageView_Width"
            android:layout_height="@dimen/splashActivity_imageView_Height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/splashActivity_imageView_marginLeft"
            android:src="@drawable/logo_splash"></ImageView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>